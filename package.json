{
    "name": "tn-sports-main",
    "version": "1.0.0",
    "description": "Integrated TN Sports Project",
    "private": true,
    "workspaces": [
        "backend",
        "frontends"
    ],
    "scripts": {
        "install-all": "npm install",
        "backend": "npm run dev -w backend",
        "frontend": "npm run dev -w frontends",
        "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
        "start": "npm run start -w backend"
    },
    "devDependencies": {
        "concurrently": "^8.2.2"
    }
}